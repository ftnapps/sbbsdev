#!/bin/sh
# postinst script for sbbscvs
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
    # Create ctrl/ directory if not already present
    if [ ! -d "/opt/sbbscvs/ctrl/" ]; then
	# Create ctrl/ directory
	/bin/mkdir --mode=755 /opt/sbbscvs/ctrl
	# Populate the ctrl directory with an intial set of files
	/bin/cp /usr/share/sbbscvs/ctrl/* /opt/sbbscvs/ctrl
	/bin/cp /usr/share/doc/sbbscvs/examples/sbbs.ini /opt/sbbscvs/ctrl
	/bin/cp /usr/share/doc/sbbscvs/examples/sbbsecho.cfg /opt/sbbscvs/ctrl
    fi
    # Create text/ directory if not already present
    if [ ! -d "/opt/sbbscvs/text/" ]; then
	# Create ctrl/ directory
	/bin/mkdir --mode=755 /opt/sbbscvs/text
	# Populate the text directory with an intial set of files
	/bin/cp -r /usr/share/sbbscvs/text/* /opt/sbbscvs/text
    fi
    # Create web/ directory if not already present
    if [ ! -d "/opt/sbbscvs/web/" ]; then
	# Create web/ directory
	/bin/mkdir --mode=755 /opt/sbbscvs/web
	# Populate the web directory with an intial set of files
	/bin/cp -r /usr/share/sbbscvs/web/* /opt/sbbscvs/web
    fi

    #  Set default user:group for sbbscvs install
    chown -R sbbscvs:sbbscvs /opt/sbbscvs

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# Run the baja source makefile after installs/upgrades.
/usr/bin/make -C /opt/sbbscvs/exec

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


